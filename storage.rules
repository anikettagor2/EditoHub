rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper to check if user is admin (using claims)
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Branding files (Logo, etc)
    match /branding/{allPaths=**} {
      allow read, write: if true;
    }

    // User Avatars
    match /avatars/{userIdWithTimestamp} {
      allow read: if true; 
      allow write: if request.auth != null && (userIdWithTimestamp.startsWith(request.auth.uid));
    }

    // Project files
    match /projects/{projectId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default rule for everything else
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
